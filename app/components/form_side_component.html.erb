<% unless show_header? %>
  <h2 class="text-base font-semibold leading-7 text-gray-900"><%=  t('testimonial_form.start_with_recieving_testimonials')  %></h2>
  <p class="mt-1 text-sm leading-6 text-gray-600"><%=  t('testimonial_form.create_landing_page')  %></p>
<% end %>
<ul role="list" class="grid grid-cols-1 gap-x-6 gap-y-8 lg:grid-cols-3 xl:gap-x-8">
<% @forms.each do |form| %>
    <li class="overflow-hidden rounded-xl border border-gray-200">
      <div class="flex items-center gap-x-4 border-b border-gray-900/5 <%= form.published? ? 'bg-white' : 'bg-gray' %> p-6">
        <img src="https://tailwindui.com/img/logos/48x48/tuple.svg" alt="Tuple" class="h-12 w-12 flex-none rounded-lg bg-white object-cover ring-1 ring-gray-900/10">
        <div class="text-sm font-medium leading-6 text-gray-900"><%= form.title %></div>
        <div class="flex flex-col justify-end ml-auto">
          <%= button_to (form.published? ? t('general.unpublish') : t('general.publish')), workspace_form_path(@workspace, form), method: :patch, class: "rounded-md bg-indigo-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
          <%= button_to t('general.delete'), workspace_form_path(@workspace, form), method: :delete, class: "rounded-md bg-white px-2.5 py-1.5 text-sm font-semibold text-red-600 shadow-sm hover:bg-gray-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 mt-2" %>
        </div>
      </div>
    </li>
<% end %>
</ul>

