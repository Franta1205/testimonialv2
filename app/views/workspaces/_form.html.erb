<%= form_with(model: Workspace.new, local: true) do |form| %>
  <div class="field">
    <%= form.label :title, t('workspaces.form_title'), class: "block text-sm font-medium leading-6 text-gray-900" %>
    <%= form.text_field :title, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
  </div>
  <div class="field">
    <%= form.label :header_title, t('workspaces.header_title'), class: "block text-sm font-medium leading-6 text-gray-900" %>
    <%= form.text_field :header_title, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
  </div>
  <div class="field">
    <%= form.label :custom_message, t('workspaces.custom_message'),class: "block text-sm font-medium leading-6 text-gray-900" %>
    <%= form.text_field :custom_message, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
  </div>
  <div>
    <%= form.label :collection_type, t('workspaces.collection_type'),class: "block text-sm font-medium leading-6 text-gray-900" %>
    <%= form.select :collection_type, Workspace.collection_types.keys.map { |key| [t("workspaces.collection_type.#{key}"), key] }, {}, class: "mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
  </div>
  <div class="actions mt-5">
    <%= form.submit t('workspaces.submit'), class: "rounded bg-indigo-600 px-2 py-1 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
<% end %>